u: DEFAULT()
	# check user state
	if ($mental==1){
		$mental=0
		^reuse(START)
	}else if($mental==2){
		$mental=1
		^reuse(CONCENTRATED)
	}else if($mental==4){
		$mental=3
		^reuse(LOOSE_SLEEP)
	}else if($mental==6){
		$mental=5
		^reuse(PRODUCTIVE)
	}else if($mental==8){
