		^reuse(FREE_TIME)
	}else if($mental==16){
		$mental=15
		^reuse(SOLVE_PROBLEMS)
	}else if($mental==18){
		$mental=17
		^reuse(DEPRESSION)
	}else if($mental==20){
		$mental=19
		^reuse(FAITH)
	}else if($mental==22){
		$mental=21
		^reuse(ESTEEM)
	}else if($mental==24){
		$mental=23
		^reuse(HAPPINESS)
	}


